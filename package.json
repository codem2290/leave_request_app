{
  "name": "leave_request_app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "@sap-cloud-sdk/connectivity": "^3",
    "@sap-cloud-sdk/http-client": "^3",
    "@sap-cloud-sdk/resilience": "^3"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@cap-js/cds-types": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-leaverequestuiapp": "cds watch --open leaverequestuiapp/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "my.db"
        }
      },
      "CustomerS4API": {
        "kind": "odata-v2",
        "model": "srv/external/CustomerS4API",
        "credentials": {
          "destination": "s4hana",
          "path": "/sap/opu/odata/SAP/ZCUSTOMERSERVICE_SRV/"
        }
      }
    }
  },
  "sapux": [
    "app/leaverequestuiapp"
  ]
}