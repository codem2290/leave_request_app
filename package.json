{
  "name": "leave_request_app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^3",
    "@sap-cloud-sdk/http-client": "^3",
    "@sap-cloud-sdk/resilience": "^3",
    "@sap/cds": "^9",
    "@sap/hana-client": "^2.25.31",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "@sap/hdi-deploy": "4.9.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-leaverequestuiapp": "cds watch --open leaverequestuiapp/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "manager@tester.sap.com": {
              "roles": [
                "LeaveAppManager"
              ]
            },
            "employee@tester.sap.com": {
              "roles": [
                "LeaveAppEmployee"
              ]
            }
          }
        }
      },
      "db": {
        "kind": "hana"
      },
      "CustomerS4API": {
        "kind": "odata-v2",
        "model": "srv/external/CustomerS4API",
        "credentials": {
          "destination": "s4hana",
          "path": "/sap/opu/odata/SAP/ZCUSTOMERSERVICE_SRV/"
        }
      },
      "[production]": {
        "db": {
          "kind": "hana"
        },
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-runtime": true,
      "workzone": true
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/leaverequestuiapp"
  ]
}